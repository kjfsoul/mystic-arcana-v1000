{
  "mcpServers": {
    "animatedBackground": {
      "command": "npx",
      "args": ["-y", "@mysticarcana/animated-background-mcp"],
      "env": {
        "COSMIC_WEATHER_API": "https://api.astro.com/v1/weather",
        "SHADER_QUALITY": "high",
        "PERFORMANCE_MODE": "adaptive"
      },
      "description": "Handles GLSL/shader/cosmic weather animations",
      "capabilities": [
        "cosmic_weather_generation",
        "shader_compilation",
        "particle_system_management",
        "astrological_event_visualization"
      ]
    },
    "accessibilityCheck": {
      "command": "npx",
      "args": ["-y", "@mysticarcana/accessibility-mcp"],
      "env": {
        "LIGHTHOUSE_CONFIG": "./lighthouse.config.js",
        "AXE_RULES": "wcag22aa",
        "WAVE_API_KEY": "${WAVE_API_KEY}"
      },
      "description": "Runs Lighthouse/Wave/AXE audits for accessibility compliance",
      "capabilities": [
        "lighthouse_audit",
        "axe_core_testing",
        "wave_evaluation",
        "aria_validation",
        "keyboard_navigation_testing"
      ]
    },
    "tarotUxTest": {
      "command": "npx",
      "args": ["-y", "@mysticarcana/tarot-ux-mcp"],
      "env": {
        "AB_TEST_FRAMEWORK": "optimizely",
        "HEATMAP_PROVIDER": "hotjar",
        "ANALYTICS_ID": "${GOOGLE_ANALYTICS_ID}"
      },
      "description": "A/B testing for tarot spread layouts and user interactions",
      "capabilities": [
        "ab_test_management",
        "spread_layout_optimization",
        "user_interaction_tracking",
        "conversion_rate_analysis",
        "mobile_responsive_testing"
      ]
    },
    "personaAnimation": {
      "command": "npx",
      "args": ["-y", "@mysticarcana/persona-animation-mcp"],
      "env": {
        "AVATAR_QUALITY": "high",
        "EMOTION_ENGINE": "ml-based",
        "TTS_PROVIDER": "elevenlabs"
      },
      "description": "Drives evolving AI reader avatars with personality and animation",
      "capabilities": [
        "avatar_animation",
        "emotion_synthesis",
        "personality_evolution",
        "voice_modulation",
        "gesture_generation"
      ]
    },
    "competitiveResearch": {
      "command": "npx",
      "args": ["-y", "@mysticarcana/competitive-research-mcp"],
      "env": {
        "BENCHMARK_TARGETS": "sanctuary,costar,thepattern",
        "SCRAPING_INTERVAL": "daily",
        "ANALYSIS_DEPTH": "comprehensive"
      },
      "description": "Live benchmarking of competitor onboarding flows and UX patterns",
      "capabilities": [
        "competitor_analysis",
        "ux_pattern_extraction",
        "onboarding_flow_mapping",
        "feature_gap_analysis",
        "trend_identification"
      ]
    },
    "designSystem": {
      "command": "npx",
      "args": ["-y", "@mysticarcana/design-system-mcp"],
      "env": {
        "FIGMA_TOKEN": "${FIGMA_ACCESS_TOKEN}",
        "BRAND_COLORS": "cosmic",
        "THEME_MODE": "multi-brand"
      },
      "description": "Manages design tokens, brand consistency, and multi-brand theming",
      "capabilities": [
        "design_token_sync",
        "brand_validation",
        "theme_generation",
        "component_library_management",
        "style_guide_enforcement"
      ]
    },
    "cosmicWeather": {
      "command": "npx",
      "args": ["-y", "@mysticarcana/cosmic-weather-mcp"],
      "env": {
        "EPHEMERIS_API": "https://api.astronomicaldata.com/v2",
        "TIMEZONE_API": "worldtimeapi",
        "REAL_TIME_UPDATES": "true"
      },
      "description": "Real-time astrological data and cosmic weather calculations",
      "capabilities": [
        "planetary_position_calculation",
        "moon_phase_tracking",
        "retrograde_detection",
        "aspect_analysis",
        "cosmic_weather_generation"
      ]
    },
    "userPersonalization": {
      "command": "npx",
      "args": ["-y", "@mysticarcana/personalization-mcp"],
      "env": {
        "ML_MODEL": "recommendation-engine",
        "PRIVACY_MODE": "strict",
        "LEARNING_RATE": "adaptive"
      },
      "description": "AI-driven user personalization and recommendation engine",
      "capabilities": [
        "user_preference_learning",
        "content_recommendation",
        "reading_style_adaptation",
        "timing_optimization",
        "engagement_prediction"
      ]
    }
  },
  "agentChain": {
    "uiUxWorkflow": [
      {
        "agent": "accessibilityCheck",
        "triggers": ["component_creation", "design_update"],
        "priority": "high"
      },
      {
        "agent": "competitiveResearch", 
        "triggers": ["feature_planning", "ux_optimization"],
        "priority": "medium"
      },
      {
        "agent": "tarotUxTest",
        "triggers": ["layout_change", "user_flow_update"],
        "priority": "high"
      },
      {
        "agent": "designSystem",
        "triggers": ["brand_update", "theme_change"],
        "priority": "medium"
      }
    ],
    "realTimeAgents": [
      {
        "agent": "cosmicWeather",
        "interval": "15min",
        "activeHours": "24/7"
      },
      {
        "agent": "personaAnimation",
        "interval": "realtime",
        "activeHours": "user_session"
      },
      {
        "agent": "userPersonalization",
        "interval": "session_based",
        "activeHours": "user_active"
      }
    ]
  },
  "fallbackChain": [
    "claude-3-opus",
    "gpt-4-turbo", 
    "gemini-ultra",
    "local-llm"
  ],
  "logging": {
    "level": "info",
    "destinations": ["./logs/mcp-ui.log", "console"],
    "rotation": "daily"
  }
}